@{
    ViewBag.Title = "Admin Dashboard - MARINEX ERP";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var userName = User.Identity.Name;
    var isAuthenticated = User.Identity.IsAuthenticated;
    
    // Get dashboard statistics from ViewBag
    var stats = ViewBag.DashboardStats as Dictionary<string, KVM_ERP.Controllers.DashboardStat> ?? new Dictionary<string, KVM_ERP.Controllers.DashboardStat>();
    var shrimpByType = ViewBag.ShrimpByType as List<KVM_ERP.Controllers.ShrimpByTypeDTO> ?? new List<KVM_ERP.Controllers.ShrimpByTypeDTO>();
    var monthlyInvoices = ViewBag.MonthlyInvoices as List<KVM_ERP.Controllers.MonthlyInvoiceDTO> ?? new List<KVM_ERP.Controllers.MonthlyInvoiceDTO>();
    var topShrimpTypes = ViewBag.TopShrimpTypes as List<KVM_ERP.Controllers.TopShrimpTypeDTO> ?? new List<KVM_ERP.Controllers.TopShrimpTypeDTO>();
    
    // Helper function to safely get stat value
    Func<string, int> getStat = (key) => stats.ContainsKey(key) ? stats[key].TotalCount : 0;
    Func<string, string> getStatDetails = (key) => stats.ContainsKey(key) ? stats[key].Details : "";
}

<style>
    /* Modern Dashboard Styles */
    .dashboard-container {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 20px;
        width: 100%;
        max-width: 100%;
        overflow-x: hidden;
        box-sizing: border-box;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 25px;
        margin-bottom: 30px;
    }

    /* Responsive: 2 cards per row on tablets */
    @@media (max-width: 1200px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* Responsive: 1 card per row on mobile */
    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 5px solid;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .stat-card.masters {
        border-left-color: #4facfe;
    }

    .stat-card.groups {
        border-left-color: #43e97b;
    }

    .stat-card.users {
        border-left-color: #fa709a;
    }

    .stat-card.transactions {
        border-left-color: #feca57;
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: white;
        margin-bottom: 15px;
    }

    .stat-icon.masters {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
    }

    .stat-icon.groups {
        background: linear-gradient(135deg, #43e97b, #38f9d7);
    }

    .stat-icon.users {
        background: linear-gradient(135deg, #fa709a, #fee140);
    }

    .stat-icon.transactions {
        background: linear-gradient(135deg, #feca57, #ff9ff3);
    }

    .stat-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .chart-container {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 30px;
        height: 400px;
        display: flex;
        flex-direction: column;
        position: relative;
    }
    
    .chart-container canvas {
        max-width: 100% !important;
        flex: 1;
        min-height: 0;
    }

    .chart-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .charts-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 30px;
        width: 100%;
        max-width: 100%;
        overflow: hidden;
    }

    /* Responsive: 2 charts per row on tablets */
    @@media (max-width: 1200px) {
        .charts-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* Responsive: 1 chart per row on mobile */
    @@media (max-width: 768px) {
        .charts-grid {
            grid-template-columns: 1fr;
        }
        
        .chart-container {
            height: 380px;
        }
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .action-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .action-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        text-decoration: none;
        color: inherit;
    }

    .action-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: white;
        margin: 0 auto 15px;
    }

    .action-icon.masters {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .action-icon.groups {
        background: linear-gradient(135deg, #f093fb, #f5576c);
    }

    .action-icon.users {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
    }

    .action-title {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .action-description {
        font-size: 0.85rem;
        color: #6c757d;
    }

    /* SuperAdmin Exclusive Styling */
    .superadmin-exclusive {
        border: 2px solid #ffd700 !important;
        background: linear-gradient(135deg, #fff9e6, #ffffff) !important;
        position: relative;
        overflow: hidden;
    }

    .superadmin-exclusive::before {
        content: "SUPERADMIN";
        position: absolute;
        top: 8px;
        right: -25px;
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        color: #333;
        padding: 2px 30px;
        font-size: 0.7rem;
        font-weight: 700;
        transform: rotate(45deg);
        box-shadow: 0 2px 5px rgba(255, 215, 0, 0.3);
    }

    .action-icon.renewal {
        background: linear-gradient(135deg, #ffd700, #ffed4e);
        color: #333;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 15px;
        }
        
        .dashboard-header {
            padding: 20px;
        }
        
        .dashboard-title {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .charts-grid {
            grid-template-columns: 1fr;
        }
        
        .quick-actions {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Admin Dashboard</h1>
        <p class="dashboard-subtitle">Welcome, @(userName ?? "Administrator"). Real-time business intelligence and transaction statistics.</p>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" style="margin-bottom: 20px;">
            <strong>Error:</strong> @ViewBag.ErrorMessage
            <br />
            <small>Check the debug output window for more details.</small>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card" style="border-left-color: #667eea;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                <i class="fa fa-fish"></i>
            </div>
            <div class="stat-title">Shrimp Types</div>
            <div class="stat-description">Different varieties in stock</div>
            <div class="stat-value">@getStat("ShrimpTypes")</div>
        </div>

        <div class="stat-card" style="border-left-color: #43e97b;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #43e97b, #38f9d7);">
                <i class="fa fa-file-invoice"></i>
            </div>
            <div class="stat-title">Total Invoices</div>
            <div class="stat-description">All generated invoices</div>
            <div class="stat-value">@getStat("TotalInvoices")</div>
        </div>

        <div class="stat-card" style="border-left-color: #feca57;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #feca57, #ff9ff3);">
                <i class="fa fa-clock"></i>
            </div>
            <div class="stat-title">Waiting Approval</div>
            <div class="stat-description">Invoices pending approval</div>
            <div class="stat-value">@getStat("InvoicesWaitingApproval")</div>
        </div>

        <div class="stat-card" style="border-left-color: #4facfe;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
                <i class="fa fa-check-circle"></i>
            </div>
            <div class="stat-title">Approved Invoices</div>
            <div class="stat-description">Successfully approved</div>
            <div class="stat-value">@getStat("InvoicesApproved")</div>
        </div>

        <div class="stat-card" style="border-left-color: #fa709a;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #fa709a, #fee140);">
                <i class="fa fa-truck-loading"></i>
            </div>
            <div class="stat-title">Raw Material Intake</div>
            <div class="stat-description">Total intake transactions</div>
            <div class="stat-value">@getStat("RawMaterialIntake")</div>
        </div>

        <div class="stat-card" style="border-left-color: #ff6b6b;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #ff6b6b, #ff8e53);">
                <i class="fa fa-users"></i>
            </div>
            <div class="stat-title">Total Suppliers</div>
            <div class="stat-description">Active suppliers</div>
            <div class="stat-value">@getStat("TotalSuppliers")</div>
        </div>

        <div class="stat-card" style="border-left-color: #a29bfe;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #a29bfe, #6c5ce7);">
                <i class="fa fa-user-tie"></i>
            </div>
            <div class="stat-title">Total Customers</div>
            <div class="stat-description">Active customers</div>
            <div class="stat-value">@getStat("TotalCustomers")</div>
        </div>

        <div class="stat-card" style="border-left-color: #00d2d3;">
            <div class="stat-icon" style="background: linear-gradient(135deg, #00d2d3, #54a0ff);">
                <i class="fa fa-calendar-alt"></i>
            </div>
            <div class="stat-title">This Month</div>
            <div class="stat-description">Invoices this month</div>
            <div class="stat-value">@getStat("ThisMonthInvoices")</div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-grid">
        <div class="chart-container">
            <h3 class="chart-title">
                <i class="fa fa-chart-pie" style="color: #667eea;"></i>
                Shrimp Types Distribution
            </h3>
            <canvas id="shrimpTypeChart" width="400" height="200"></canvas>
        </div>

        <div class="chart-container">
            <h3 class="chart-title">
                <i class="fa fa-chart-doughnut" style="color: #f093fb;"></i>
                Invoice Status
            </h3>
            <canvas id="invoiceStatusChart" width="400" height="200"></canvas>
        </div>

        <div class="chart-container">
            <h3 class="chart-title">
                <i class="fa fa-chart-bar" style="color: #43e97b;"></i>
                Monthly Invoice Trend
            </h3>
            <canvas id="monthlyInvoiceChart" width="400" height="200"></canvas>
        </div>
    </div>

    <!-- Top Shrimp Types Table (Full Width Below Charts) -->
    <div class="chart-container" style="height: auto;">
        <h3 class="chart-title">
            <i class="fa fa-fish" style="color: #feca57;"></i>
            Top 5 Shrimp Types by Quantity
        </h3>
        <div style="overflow-x: auto;">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Shrimp Type</th>
                        <th style="text-align: center;">Transactions</th>
                        <th style="text-align: right;">Total Quantity (Slabs)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in topShrimpTypes)
                    {
                        <tr>
                            <td><i class="fa fa-fish text-primary"></i> @item.ShrimpType</td>
                            <td style="text-align: center;"><span class="badge badge-primary" style="background-color: #667eea; font-size: 14px; padding: 6px 12px;">@item.Transactions</span></td>
                            <td style="text-align: right;"><strong>@item.TotalQuantity.ToString("N0")</strong></td>
                        </tr>
                    }
                    @if (!topShrimpTypes.Any())
                    {
                        <tr>
                            <td colspan="3" style="text-align: center; color: #6c757d;">No data available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Prepare data from server
    var shrimpByTypeData = @Html.Raw(Json.Encode(shrimpByType.Select(s => new { label = s.ReceivedType, value = s.Count }).ToList()));
    var monthlyInvoiceData = @Html.Raw(Json.Encode(monthlyInvoices.Select(m => new { month = m.MonthName, count = m.InvoiceCount }).ToList()));
    
    // Chart 1: Shrimp Types Distribution (Pie Chart)
    const shrimpTypeCtx = document.getElementById('shrimpTypeChart').getContext('2d');
    new Chart(shrimpTypeCtx, {
        type: 'pie',
        data: {
            labels: shrimpByTypeData.map(s => s.label),
            datasets: [{
                data: shrimpByTypeData.map(s => s.value),
                backgroundColor: [
                    '#667eea',
                    '#43e97b',
                    '#fa709a',
                    '#feca57',
                    '#ff6b6b',
                    '#4ecdc4',
                    '#a29bfe',
                    '#00d2d3'
                ],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            layout: {
                padding: {
                    bottom: 5
                }
            },
            plugins: {
                legend: {
                    position: 'bottom',
                    align: 'center',
                    labels: {
                        padding: 8,
                        usePointStyle: true,
                        font: {
                            size: 10
                        },
                        boxWidth: 10,
                        boxHeight: 10
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.label + ': ' + context.parsed + ' items';
                        }
                    }
                }
            }
        }
    });

    // Chart 2: Invoice Status (Doughnut Chart)
    const invoiceStatusCtx = document.getElementById('invoiceStatusChart').getContext('2d');
    new Chart(invoiceStatusCtx, {
        type: 'doughnut',
        data: {
            labels: ['Waiting Approval', 'Approved'],
            datasets: [{
                data: [@getStat("InvoicesWaitingApproval"), @getStat("InvoicesApproved")],
                backgroundColor: [
                    '#feca57',
                    '#43e97b'
                ],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            layout: {
                padding: {
                    bottom: 5
                }
            },
            plugins: {
                legend: {
                    position: 'bottom',
                    align: 'center',
                    labels: {
                        padding: 8,
                        usePointStyle: true,
                        font: {
                            size: 10
                        },
                        boxWidth: 10,
                        boxHeight: 10
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return context.label + ': ' + context.parsed + ' invoices';
                        }
                    }
                }
            }
        }
    });

    // Chart 3: Monthly Invoice Trend (Bar Chart)
    const monthlyInvoiceCtx = document.getElementById('monthlyInvoiceChart').getContext('2d');
    new Chart(monthlyInvoiceCtx, {
        type: 'bar',
        data: {
            labels: monthlyInvoiceData.map(m => m.month),
            datasets: [{
                label: 'Invoices',
                data: monthlyInvoiceData.map(m => m.count),
                backgroundColor: '#667eea',
                borderColor: '#667eea',
                borderRadius: 8,
                borderSkipped: false,
                barPercentage: 0.5,
                categoryPercentage: 0.6
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            layout: {
                padding: {
                    top: 10,
                    bottom: 10,
                    left: 5,
                    right: 5
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return 'Invoices: ' + context.parsed.y;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1,
                        font: {
                            size: 10
                        }
                    },
                    grid: {
                        color: 'rgba(0,0,0,0.05)'
                    }
                },
                x: {
                    ticks: {
                        font: {
                            size: 10
                        }
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>
