@{
    ViewBag.Title = "Designation Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }
    
    .content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }
    
    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }
    
    .header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }
    
    .add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
    }
    
    .table-container {
        padding: 30px;
        background: white;
    }
    
    .dataTables_wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    #designationTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    #designationTable thead th {
        background: #7f88e9; /* slight violet-blue */
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255,255,255,0.35); /* divide columns */
    }
    #designationTable thead th:last-child { border-right: none; }
    
    #designationTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
    }
    
    #designationTable tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    
    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }
    
    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
        transform: translateY(-1px);
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }
    
    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }
    
    .badge {
        color: black !important;
        font-weight: 600;
    }
    
    .badge-success {
        background-color: #d4edda;
        color: black !important;
        border: 1px solid #c3e6cb;
    }
    
    .badge-danger {
        background-color: #f8d7da;
        color: black !important;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="main-container">
    <div class="content-wrapper">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="header-title">
                    <i class="fa fa-id-badge"></i>
                    Designation Master
                </h1>
                <a href="@Url.Action("Form", "DesginationMaster")" class="btn add-btn">
                    <i class="fa fa-plus-circle"></i> Add New Designation
                </a>
            </div>
        </div>

        <div class="table-container">
            <table id="designationTable" class="display table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            // Initialize DataTable
            var table = $('#designationTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "@Url.Action("GetAjaxData", "DesginationMaster")",
                    "type": "POST",
                    "dataType": "json",
                    "error": function(xhr, error, thrown) {
                        console.log('DataTables Ajax Error:', error);
                        alert('Error loading data: ' + error);
                    }
                },
                "columns": [
                    { 
                        "data": "DSGNCODE",
                        "name": "Code",
                        "width": "20%"
                    },
                    { 
                        "data": "DSGNDESC",
                        "name": "Description",
                        "width": "40%"
                    },
                    { 
                        "data": "DISPSTATUS",
                        "name": "Status",
                        "width": "20%",
                        "render": function(data, type, row) {
                            return data == 0 ? '<span class="badge badge-success">Enabled</span>' : '<span class="badge badge-danger">Disabled</span>';
                        }
                    },
                    {
                        "data": "DSGNID",
                        "name": "Actions",
                        "width": "20%",
                        "orderable": false,
                        "searchable": false,
                        "render": function(data, type, row) {
                            return '<a href="@Url.Action("Form", "DesginationMaster")/' + data + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>' +
                                   '&nbsp;<a href="#" class="btn btn-action btn-delete delete-btn" data-id="' + data + '"><i class="fa fa-trash"></i> Delete</a>';
                        }
                    }
                ],
                "pageLength": 25,
                "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                "order": [[0, "asc"]],
                "dom": '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                "responsive": true,
                "language": {
                    "processing": "Loading data...",
                    "emptyTable": "No designations found",
                    "zeroRecords": "No matching records found",
                    "search": "_INPUT_",
                    "searchPlaceholder": "Search..."
                }
            });

            // Delete functionality
            $(document).on('click', '.delete-btn', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                var row = $(this).closest('tr');
                
                if (confirm('Are you sure you want to delete this designation?')) {
                    $.post('@Url.Action("Del", "DesginationMaster")', { id: id })
                        .done(function(response) {
                            if (response.indexOf('Successfully') !== -1) {
                                table.ajax.reload();
                                alert('Designation deleted successfully!');
                            } else {
                                alert('Error: ' + response);
                            }
                        })
                        .fail(function() {
                            alert('Error occurred while deleting the record.');
                        });
                }
            });
        });
    </script>
}
