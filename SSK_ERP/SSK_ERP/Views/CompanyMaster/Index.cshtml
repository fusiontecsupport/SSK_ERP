@{
    ViewBag.Title = "Company Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }
    
    .content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }
    
    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }
    
    .header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }
    
    .add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
    }
    
    .table-container {
        padding: 30px;
        background: white;
    }
    
    .dataTables_wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    #example {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    #example thead th {
        background: #7f88e9; /* slight violet-blue */
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255,255,255,0.35); /* divide columns */
    }
    #example thead th:last-child { border-right: none; }
    
    #example tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
    }
    
    #example tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    
    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }
    
    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
        transform: translateY(-1px);
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }
    
    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }
    
    .badge {
        color: black !important;
        font-weight: 600;
    }
    
    .badge-success {
        background-color: #d4edda;
        color: black !important;
        border: 1px solid #c3e6cb;
    }
    
    .badge-danger {
        background-color: #f8d7da;
        color: black !important;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="main-container">
    <div class="content-wrapper">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="header-title">
                    <i class="fa fa-building"></i>
                    Company Master
                </h1>
            </div>
        </div>

        <div class="table-container">
            <table id="example" class="display table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Mobile</th>
                        <th>Contact Person</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Mobile</th>
                        <th>Contact Person</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" class="init">
        $(document).ready(function() {
            var table = $('#example').DataTable({
                ajax: "@Url.Action("GetAjaxData", "CompanyMaster")",
                columns: [
                    { data: "COMPCODE" },
                    { data: "COMPNAME" },
                    { data: "COMPADDR" },
                    { data: "COMPPHN1" },
                    { data: "COMPCPRSN" },
                    { data: "COMPMAIL" },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<a href="@Url.Action("NForm", "CompanyMaster")/' + row["COMPID"] + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>' +
                                   '&nbsp;<a href="#" id="' + row["COMPID"] + '" class="btn btn-action btn-delete editor_remove"><i class="fa fa-trash"></i> Delete</a>';
                        },
                        orderable: false
                    }
                ],
                lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
                pageLength: 10,
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                scrollX: false,
                autoWidth: true,
                fixedColumns: false,
                language: {
                    lengthMenu: "Show _MENU_ entries",
                    search: "_INPUT_",
                    searchPlaceholder: "Search...",
                    info: "Showing _START_ to _END_ of _TOTAL_ entries"
                }
            });

            // Delete record - keeping original SweetAlert functionality
            $(document).on("click", "a.editor_remove", function(e) {
                e.preventDefault();
                var r = confirm("Are you sure you want to delete this record?");
                if (r == true) {
                    var idx = $(this).attr('id');
                    var base = window.location.origin;

                    $.post(base + "/CompanyMaster/Del", {
                        id: idx,
                        fld: ""
                    }, function(data, status) {
                        if (data == "Deleted Successfully ...") {
                            // Show success message
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: 'Record deleted successfully',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                table.ajax.reload();
                            });
                        } else if (data == "") {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'You are not authorized to delete!'
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data
                            });
                        }
                    }).fail(function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to delete record'
                        });
                    });
                }
            });
        });
    </script>
}
