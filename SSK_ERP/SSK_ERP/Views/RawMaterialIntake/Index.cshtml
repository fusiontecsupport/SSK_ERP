@{
    ViewBag.Title = "Raw Material Intake";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }

    .content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }

    .header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    /* Match masters "Add" button styling */
    .add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }
    .add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
        text-decoration: none;
    }

    .table-container { padding: 30px; background: white; }

    #rawIntakeTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    #rawIntakeTable thead th {
        background: #7f88e9; /* slight violet-blue */
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255,255,255,0.35);
    }
    #rawIntakeTable thead th:last-child { border-right: none; }

    #rawIntakeTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
    }

    #rawIntakeTable tbody tr:hover { background-color: #f8f9ff; transition: all 0.2s ease; }

    /* Action buttons (match masters) */
    .btn-action { padding: 6px 12px; margin: 0 2px; border-radius: 20px; border: none; font-size: 12px; font-weight: 600; transition: all 0.3s ease; }
    .btn-edit { background: linear-gradient(135deg, #ffeaa7, #fdcb6e); color: #2d3436; }
    .btn-edit:hover { background: linear-gradient(135deg, #fdcb6e, #e17055); color: #fff; transform: translateY(-1px); }
    .btn-delete { background: linear-gradient(135deg, #fd79a8, #e84393); color: #fff; }
    .btn-delete:hover { background: linear-gradient(135deg, #e84393, #d63031); transform: translateY(-1px); }
    .btn-print { background: linear-gradient(135deg, #74b9ff, #0984e3); color: #fff; }
    .btn-print:hover { background: linear-gradient(135deg, #0984e3, #2d3436); transform: translateY(-1px); }

    /* New: Common Calculation Print button */
    .btn-print-calc { background: linear-gradient(135deg, #8e2de2, #4a00e0); color: #fff; }
    .btn-print-calc:hover { background: linear-gradient(135deg, #4a00e0, #2b086e); transform: translateY(-1px); }

    /* Status badge styling (match masters) */
    .badge { color: black !important; font-weight: 600; }
    .badge-success { background-color: #d4edda; color: black !important; border: 1px solid #c3e6cb; }
    .badge-danger { background-color: #f8d7da; color: black !important; border: 1px solid #f5c6cb; }

    /* Date Filter Section Styling */
    .date-filter-card {
        background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
        border: 1px solid #e3f2fd;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
    
    .form-label {
        font-size: 14px;
        margin-bottom: 8px;
    }
    
    .form-control {
        border-radius: 8px;
        border: 2px solid #e9ecef;
        padding: 10px 12px;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #4facfe;
        box-shadow: 0 0 0 0.2rem rgba(79, 172, 254, 0.25);
    }
    
    #filterBtn {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    #filterBtn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(79, 172, 254, 0.4);
    }
    
    #clearBtn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        border: 2px solid #6c757d;
        transition: all 0.3s ease;
    }
    
    #clearBtn:hover {
        background-color: #6c757d;
        color: white;
        transform: translateY(-2px);
    }
</style>

<div class="main-container">
    <div class="content-wrapper">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="header-title">
                    <i class="fa-solid fa-truck-loading"></i>
                    Raw Material Intake
                </h1>
                @if (User.IsInRole("RawMaterialIntakeCreate"))
                {
                    <a href="@Url.Action("Form", "RawMaterialIntake")" class="btn add-btn">
                        <i class="fa fa-plus-circle"></i> Add New
                    </a>
                }
            </div>
        </div>

        <div class="table-container">
            <!-- Error/Success Message Display -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa fa-exclamation-triangle"></i> <strong>Access Denied!</strong> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <!-- Date Filter Section -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-end">
                                <div class="col-md-3">
                                    <label for="fromDate" class="form-label fw-bold text-primary">
                                        <i class="fa fa-calendar-alt"></i> From Date
                                    </label>
                                    <input type="date" id="fromDate" class="form-control border-2" />
                                </div>
                                <div class="col-md-3">
                                    <label for="toDate" class="form-label fw-bold text-primary">
                                        <i class="fa fa-calendar-alt"></i> To Date
                                    </label>
                                    <input type="date" id="toDate" class="form-control border-2" />
                                </div>
                                <div class="col-md-3">
                                    <button type="button" id="filterBtn" class="btn btn-primary px-4">
                                        <i class="fa fa-filter"></i> Filter
                                    </button>
                                    <button type="button" id="clearBtn" class="btn btn-outline-secondary px-4 ms-2">
                                        <i class="fa fa-times"></i> Clear
                                    </button>
                                </div>
                                <div class="col-md-3 text-end">
                                    <div id="filterStatus" class="mb-2">
                                        <small class="text-success fw-bold" style="display: none;">
                                            <i class="fa fa-check-circle"></i> 
                                            <span id="filterText"></span>
                                        </small>
                                    </div>
                                    <small class="text-muted">
                                        <i class="fa fa-info-circle"></i> 
                                        Filter records by transaction date range
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table id="rawIntakeTable" class="display table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>No</th>
                        <th>Supplier Name</th>
                        <th>Supplier Code</th>
                        <th>Vechicle No</th>
                        <th>Products</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Date</th>
                        <th>No</th>
                        <th>Supplier Name</th>
                        <th>Supplier Code</th>
                        <th>Vechicle No</th>
                        <th>Products</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
            
            $.fn.dataTable.ext.errMode = 'console';

            var table = $('#rawIntakeTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetAjaxData", "RawMaterialIntake")',
                    type: 'GET',
                    data: function(d) {
                        // Add date filter parameters
                        d.fromDate = $('#fromDate').val();
                        d.toDate = $('#toDate').val();
                    },
                    dataSrc: function(json){
                        if (json && Array.isArray(json.data)) return json.data;
                        if (Array.isArray(json)) return json;
                        if (json && json.error) { console.error('Server error:', json.error); return []; }
                        return [];
                    },
                    error: function(xhr, status, err){
                        console.error('RawMaterialIntake GetAjaxData error:', status, err, xhr && xhr.responseText);
                        alert('Failed to load data. Please check console for details.');
                    }
                },
                columns: [
                    { 
                        data: 'TRANDATE',
                        render: function(data, type, row) {
                            if (data && type === 'display') {
                                // Parse the date and format as dd/mm/yyyy
                                var date = new Date(data);
                                if (!isNaN(date.getTime())) {
                                    var day = String(date.getDate()).padStart(2, '0');
                                    var month = String(date.getMonth() + 1).padStart(2, '0');
                                    var year = date.getFullYear();
                                    return day + '/' + month + '/' + year;
                                }
                            }
                            return data;
                        }
                    },
                    { data: 'TRANDNO' },
                    { data: 'CATENAME' },
                    { data: 'CATECODE' },
                    { data: 'VECHNO' },
                    { data: 'Products' },
                    { data: 'StatusBadge', orderable: false },
                    {
                        data: null,
                        orderable: false,
                        render: function (data, type, row) {
                            var id = row['TRANMID'];
                            var hasInvoice = row['HasInvoice'];
                            var buttons = '';
                            
                            // Edit button - only if user has Edit role
                            @if (User.IsInRole("RawMaterialIntakeEdit"))
                            {
                                @:if (hasInvoice) {
                                    @:// Disabled edit button if invoice generated
                                    @:buttons += '<button class="btn btn-action btn-edit" style="opacity: 0.5; cursor: not-allowed;" ' +
                                    @:           'onclick="alert(\'Cannot edit: Invoice has been generated for this Raw Material Intake. Please delete the invoice first.\'); return false;" ' +
                                    @:           'title="Cannot edit - invoice generated">' +
                                    @:           '<i class="fa fa-lock"></i> Invoiced</button>&nbsp;';
                                @:} else {
                                    @:// Regular edit button
                                    @:buttons += '<a href="' + '@Url.Action("Form", "RawMaterialIntake")' + '/' + id + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>&nbsp;';
                                @:}
                            }
                            
                            // Delete button - also check if invoice generated (already handled by backend but add UI feedback)
                            if (hasInvoice) {
                                buttons += '<button class="btn btn-action btn-delete" style="opacity: 0.5; cursor: not-allowed;" ' +
                                          'onclick="alert(\'Cannot delete: Invoice has been generated for this Raw Material Intake. Please delete the invoice first.\'); return false;" ' +
                                          'title="Cannot delete - invoice generated">' +
                                          '<i class="fa fa-lock"></i> Locked</button>&nbsp;';
                            } else {
                                buttons += '<a href="#" class="btn btn-action btn-delete editor_remove" data-id="' + id + '"><i class="fa fa-trash"></i> Delete</a>&nbsp;';
                            }
                            
                            // Calc and Print buttons always shown
                            buttons += '<a href="#" class="btn btn-action btn-print-calc" title="Print all calculations" data-id="' + id + '"><i class="fa fa-calculator"></i> Calc</a>' +
                                       '&nbsp;<a href="#" class="btn btn-action btn-print" data-id="' + id + '"><i class="fa fa-print"></i> Print</a>';
                            
                            return buttons;
                        }
                    }
                ],
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            // Delete handler (match masters behavior)
            $(document).on('click', 'a.editor_remove', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                if (!id) return false;
                if (confirm('Are you sure you want to delete this entry?')) {
                    $.post('@Url.Action("Del", "RawMaterialIntake")', { id: id })
                        .done(function (response) {
                            if (typeof response === 'string' && response.indexOf('Successfully') !== -1) {
                                table.ajax.reload();
                                alert('Deleted successfully');
                            } else {
                                alert('Error: ' + (response && response.error ? response.error : response));
                            }
                        })
                        .fail(function () { alert('Error occurred while deleting the record.'); });
                }
                return false;
            });

            // Print handler - Generate PDF
            $(document).on('click', 'a.btn-print', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                if (!id) return false;
                
                // Show loading state
                var $btn = $(this);
                var originalHtml = $btn.html();
                $btn.html('<i class="fa fa-spinner fa-spin"></i> Generating...');
                $btn.prop('disabled', true);
                
                // Generate PDF in new window
                var url = '@Url.Action("GenerateTransactionPDF", "RawMaterialIntake")' + '/' + id;
                var newWindow = window.open(url, '_blank');
                
                // Reset button state after a short delay
                setTimeout(function() {
                    $btn.html(originalHtml);
                    $btn.prop('disabled', false);
                }, 2000);
                
                return false;
            });

            // Common Calculation Print handler - Generate consolidated calculations PDF
            $(document).on('click', 'a.btn-print-calc', function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                if (!id) return false;

                var $btn = $(this);
                var originalHtml = $btn.html();
                $btn.html('<i class="fa fa-spinner fa-spin"></i> Generating...');
                $btn.prop('disabled', true);

                var url = '@Url.Action("GenerateCalculationPDF", "RawMaterialIntake")' + '?tranmid=' + id;
                var newWindow = window.open(url, '_blank');

                setTimeout(function() {
                    $btn.html(originalHtml);
                    $btn.prop('disabled', false);
                }, 2000);

                return false;
            });

            // Function to update filter status display
            function updateFilterStatus() {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                var statusDiv = $('#filterStatus small');
                var textSpan = $('#filterText');
                
                if (fromDate || toDate) {
                    var filterText = 'Filtered: ';
                    if (fromDate && toDate) {
                        filterText += fromDate + ' to ' + toDate;
                    } else if (fromDate) {
                        filterText += 'From ' + fromDate;
                    } else if (toDate) {
                        filterText += 'Until ' + toDate;
                    }
                    textSpan.text(filterText);
                    statusDiv.show();
                } else {
                    statusDiv.hide();
                }
            }

            // Date Filter Event Handlers
            $('#filterBtn').on('click', function() {
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                
                // Validate date range
                if (fromDate && toDate && fromDate > toDate) {
                    alert('From Date cannot be greater than To Date');
                    return;
                }
                
                // Show loading state
                $(this).html('<i class="fa fa-spinner fa-spin"></i> Filtering...');
                $(this).prop('disabled', true);
                
                // Reload table with new filters
                table.ajax.reload(function() {
                    // Reset button state
                    $('#filterBtn').html('<i class="fa fa-filter"></i> Filter');
                    $('#filterBtn').prop('disabled', false);
                    updateFilterStatus();
                });
            });

            $('#clearBtn').on('click', function() {
                $('#fromDate').val('');
                $('#toDate').val('');
                updateFilterStatus();
                
                // Show loading state
                $(this).html('<i class="fa fa-spinner fa-spin"></i> Clearing...');
                $(this).prop('disabled', true);
                
                table.ajax.reload(function() {
                    // Reset button state
                    $('#clearBtn').html('<i class="fa fa-times"></i> Clear');
                    $('#clearBtn').prop('disabled', false);
                });
            });

            // Allow Enter key to trigger filter
            $('#fromDate, #toDate').on('keypress', function(e) {
                if (e.which === 13) { // Enter key
                    $('#filterBtn').click();
                }
            });

            // Set default date range (last 30 days) and update filter status
            var today = new Date();
            var thirtyDaysAgo = new Date();
            thirtyDaysAgo.setDate(today.getDate() - 30);
            
            $('#toDate').val(today.toISOString().split('T')[0]);
            $('#fromDate').val(thirtyDaysAgo.toISOString().split('T')[0]);
            
            // Show initial filter status
            updateFilterStatus();
        });
    </script>
}
