@model SSK_ERP.Controllers.Purchase.PurchaseOrderController.PurchaseOrderPrintViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Order - @Model.TRANDNO</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            background: #f5f5f5;
        }

        .po-print-container {
            max-width: 900px;
            margin: 0 auto;
            background: #ffffff;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .po-print-header {
            text-align: center;
            border-bottom: 3px solid #185a9d;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .po-print-header h1 {
            color: #185a9d;
            font-size: 28px;
            margin-bottom: 5px;
        }

        .po-print-header h2 {
            color: #555;
            font-size: 16px;
            font-weight: normal;
        }

        .po-print-info {
            margin-bottom: 20px;
        }

        .po-print-info-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 6px;
            font-size: 14px;
        }

        .po-print-address-row > div:first-child {
            flex: 0 0 60%;
            max-width: 60%;
        }

        .po-print-address-row > div:last-child {
            flex: 0 0 40%;
            max-width: 40%;
            text-align: right;
        }

        .po-print-address-row .po-print-info-value {
            white-space: normal;
            overflow-wrap: break-word;
            word-wrap: break-word;
        }

        .po-print-info-label {
            font-weight: 600;
            min-width: 110px;
            color: #555;
        }

        .po-print-info-value {
            color: #333;
        }

        .po-print-section-title {
            font-size: 15px;
            font-weight: 600;
            margin: 16px 0 8px 0;
            color: #185a9d;
            border-bottom: 2px solid #43cea2;
            padding-bottom: 4px;
        }

        .po-print-items-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        .po-print-items-table thead {
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: #ffffff;
        }

        .po-print-items-table th,
        .po-print-items-table td {
            padding: 10px;
            font-size: 13px;
            border-bottom: 1px solid #e0e0e0;
        }

        .po-print-items-table th {
            text-align: left;
            font-weight: 600;
        }

        .po-print-items-table th.text-right,
        .po-print-items-table td.text-right {
            text-align: right;
        }

        .po-print-items-table th.text-center,
        .po-print-items-table td.text-center {
            text-align: center;
        }

        .po-print-summary {
            width: 100%;
            max-width: 380px;
            margin-left: auto;
            margin-top: 10px;
            border: 2px solid #185a9d;
            border-radius: 8px;
            overflow: hidden;
        }

        .po-print-summary-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 14px;
            border-bottom: 1px solid #ddd;
            font-size: 14px;
        }

        .po-print-summary-row:last-child {
            border-bottom: none;
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: #ffffff;
            font-weight: 700;
            font-size: 16px;
        }

        .po-print-summary-label {
            font-weight: 600;
        }

        .po-print-summary-value {
            font-weight: 600;
        }

        .po-print-amount-words {
            margin-top: 16px;
            font-size: 13px;
            font-style: italic;
            color: #555;
        }

        .po-print-footer {
            margin-top: 40px;
            padding-top: 18px;
            border-top: 1px solid #ddd;
            text-align: center;
            font-size: 12px;
            color: #777;
        }

        .po-print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background: linear-gradient(135deg, #43cea2, #185a9d);
            color: #ffffff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(24, 90, 157, 0.3);
        }

        .po-print-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(24, 90, 157, 0.4);
        }

        @@media print {
            body {
                background: #ffffff;
                padding: 0;
            }

            .po-print-container {
                box-shadow: none;
                padding: 20px;
            }

            .po-print-button {
                display: none;
            }

            @@page {
                margin: 1cm;
            }
        }
    </style>
</head>
<body>
    <button class="po-print-button" onclick="window.print();">
        <i class="fa fa-print"></i> Print
    </button>

    <div class="po-print-container">
        <div class="po-print-header">
            <h1>Purchase Order</h1>
            <h2>Order No: @Model.TRANDNO</h2>
        </div>

        <div class="po-print-info">
            <div class="po-print-info-row">
                <div>
                    <span class="po-print-info-label">Order No:</span>
                    <span class="po-print-info-value">@Model.TRANDNO</span>
                </div>
                <div>
                    <span class="po-print-info-label">Date:</span>
                    <span class="po-print-info-value">@Model.TRANDATE.ToString("dd/MM/yyyy")</span>
                </div>
            </div>

            <div class="po-print-section-title">Supplier Details</div>
            <div class="po-print-info-row">
                <div>
                    <span class="po-print-info-label">Name:</span>
                    <span class="po-print-info-value">@Model.SupplierName</span>
                </div>
                <div>
                    <span class="po-print-info-label">Code:</span>
                    <span class="po-print-info-value">@Model.SupplierCode</span>
                </div>
            </div>
            <div class="po-print-info-row po-print-address-row">
                <div>
                    <span class="po-print-info-label">Address:</span>
                    <span class="po-print-info-value">
                        @Model.Address1<br />
                        @if (!string.IsNullOrWhiteSpace(Model.Address2))
                        {
                            @Model.Address2<br />
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Address3))
                        {
                            @Model.Address3<br />
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Address4))
                        {
                            @Model.Address4
                        }
                    </span>
                </div>
                <div>
                    <span class="po-print-info-label">State:</span>
                    <span class="po-print-info-value">@Model.State (@Model.StateCode)</span>
                </div>
            </div>
            <div class="po-print-info-row">
                <div>
                    <span class="po-print-info-label">GST No:</span>
                    <span class="po-print-info-value">@Model.GstNo</span>
                </div>
            </div>
        </div>

        <div class="po-print-section-title">Order Items</div>
        <table class="po-print-items-table">
            <thead>
                <tr>
                    <th style="width:5%;" class="text-center">S.No</th>
                    <th style="width:25%;">Item</th>
                    <th style="width:20%;">Material Group</th>
                    <th style="width:10%;" class="text-right">Profit %</th>
                    <th style="width:10%;" class="text-right">Qty</th>
                    <th style="width:10%;" class="text-right">Rate</th>
                    <th style="width:10%;" class="text-right">Actual Rate</th>
                    <th style="width:10%;" class="text-right">Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    var index = 1;
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="text-center">@index</td>
                            <td>@item.MaterialName</td>
                            <td>@item.MaterialGroupName</td>
                            <td class="text-right">@item.ProfitPercent.ToString("N2")</td>
                            <td class="text-right">@item.Qty.ToString("N2")</td>
                            <td class="text-right">@item.Rate.ToString("N2")</td>
                            <td class="text-right">@item.ActualRate.ToString("N2")</td>
                            <td class="text-right">@item.Amount.ToString("N2")</td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">No items available.</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="po-print-summary">
            <div class="po-print-summary-row">
                <span class="po-print-summary-label">Gross Amount:</span>
                <span class="po-print-summary-value">₹ @Model.GrossAmount.ToString("N2")</span>
            </div>
            <div class="po-print-summary-row">
                <span class="po-print-summary-label">Net Amount:</span>
                <span class="po-print-summary-value">₹ @Model.NetAmount.ToString("N2")</span>
            </div>
        </div>

        <div class="po-print-amount-words">
            Amount in words: <strong>@Model.AmountInWords</strong>
        </div>

        <div class="po-print-footer">
            <p>This is a computer-generated Purchase Order and does not require a signature.</p>
            <p>Printed on: @DateTime.Now.ToString("dd MMM yyyy HH:mm")</p>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</body>
</html>
