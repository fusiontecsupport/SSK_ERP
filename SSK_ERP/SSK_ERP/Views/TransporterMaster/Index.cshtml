@model IEnumerable<SSK_ERP.Models.TransporterMaster>
@{
    ViewBag.Title = "Transporter Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }
    .content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }
    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }
    .header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }
    .add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }
    .add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
    }
    .table-container {
        padding: 30px;
        background: white;
    }
    #example {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    #example thead th {
        background: #7f88e9;
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255,255,255,0.35);
    }
    #example thead th:last-child { border-right: none; }
    #example tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
    }
    #example tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }
    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
        transform: translateY(-1px);
    }
    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }
    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }
    .badge { color: black !important; font-weight: 600; }
    .badge-success {
        background-color: #d4edda;
        color: black !important;
        border: 1px solid #c3e6cb;
    }
    .badge-danger {
        background-color: #f8d7da;
        color: black !important;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="main-container">
    <div class="content-wrapper">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="header-title">
                    <i class="bi bi-airplane-engines"></i>
                    Transporter Master
                </h1>
                <a href="@Url.Action("Form", "TransporterMaster")" class="btn add-btn">
                    <i class="fa fa-plus-circle"></i> Add New Transporter
                </a>
            </div>
        </div>

        <div class="table-container">
            <table id="example" class="display table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Contact Person</th>
                        <th>Email</th>
                        <th>Tracking Link</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Contact Person</th>
                        <th>Email</th>
                        <th>Tracking Link</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" class="init">
        var editor;
        $(document).ready(function () {
            $.fn.dataTable.ext.errMode = 'console';

            table = $('#example').DataTable({
                ajax: {
                    url: "@Url.Action("GetAjaxData", "TransporterMaster")",
                    dataSrc: function (json) {
                        if (json && Array.isArray(json.aaData)) return json.aaData;
                        if (json && Array.isArray(json.data)) return json.data;
                        if (Array.isArray(json)) return json;
                        console.warn('Unexpected data format from TransporterMaster:', json);
                        return [];
                    },
                    error: function (xhr, status, err) {
                        console.error('TransporterMaster GetAjaxData error:', status, err, xhr && xhr.responseText);
                        alert('Failed to load transporters. Please check console for details.');
                    }
                },
                columns: [
                    { data: "CATECODE" },
                    { data: "CATENAME" },
                    { data: "CATEPHN1" },
                    { data: "CATECPNAME" },
                    { data: "CATEEMAIL" },
                    { 
                        data: "CATE_TRACKING_LINK",
                        render: function (data, type, row) {
                            if (!data) return '';
                            var safe = $('<div>').text(data).html();
                            return '<a href="' + safe + '" target="_blank">Open</a>';
                        }
                    },
                    {
                        data: "DISPSTATUS",
                        render: function (data, type, row) {
                            return data == 0 ? '<span class="badge badge-success">Enabled</span>' : '<span class="badge badge-danger">Disabled</span>';
                        }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<a href="@Url.Action("Form", "TransporterMaster")/' + row["CATEID"] + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>' +
                                   '&nbsp;<a href="#" id="' + row["CATEID"] + '" class="btn btn-action btn-delete editor_remove"><i class="fa fa-trash"></i> Delete</a>';
                        }
                    }
                ],
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                pageLength: 25,
                order: [[0, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            $(document).on("click", "a.editor_remove", function () {
                var idx = $(this).attr('id');
                if (!idx || idx === 'undefined') {
                    alert("Error: Transporter ID not found. Please refresh the page and try again.");
                    return false;
                }

                var r = confirm("Are you sure to delete this record ?");
                if (r == true) {
                    var base = window.location.origin;
                    $.post(base + "/TransporterMaster/deletedata",
                        { id: idx, fld: "" },
                        function (data, status) {
                            if (data == "Deleted Successfully ...")
                                location.replace(base + "/TransporterMaster/Index");
                            else if (data == "") alert("You are not authorize to Delete..!");
                            else alert(data);
                        })
                        .fail(function (xhr, status, error) {
                            alert("Delete failed: " + (xhr.responseText || error));
                        });
                }
                return false;
            });
        });
    </script>
}
