@{
    ViewBag.Title = "Admin Dashboard - MARINEX ERP";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var userName = User.Identity.Name;
    var isAuthenticated = User.Identity.IsAuthenticated;
}

<style>
    /* Modern Dashboard Styles */
    .dashboard-container {
        background: #f8f9fa;
        min-height: 100vh;
        padding: 20px;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 5px solid;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .stat-card.masters {
        border-left-color: #4facfe;
    }

    .stat-card.groups {
        border-left-color: #43e97b;
    }

    .stat-card.users {
        border-left-color: #fa709a;
    }

    .stat-card.transactions {
        border-left-color: #feca57;
    }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        color: white;
        margin-bottom: 15px;
    }

    .stat-icon.masters {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
    }

    .stat-icon.groups {
        background: linear-gradient(135deg, #43e97b, #38f9d7);
    }

    .stat-icon.users {
        background: linear-gradient(135deg, #fa709a, #fee140);
    }

    .stat-icon.transactions {
        background: linear-gradient(135deg, #feca57, #ff9ff3);
    }

    .stat-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .stat-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #2c3e50;
    }

    .chart-container {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 30px;
    }

    .chart-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .charts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 25px;
    }

    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .action-card {
        background: white;
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .action-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        text-decoration: none;
        color: inherit;
    }

    .action-icon {
        width: 50px;
        height: 50px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        color: white;
        margin: 0 auto 15px;
    }

    .action-icon.masters {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .action-icon.groups {
        background: linear-gradient(135deg, #f093fb, #f5576c);
    }

    .action-icon.users {
        background: linear-gradient(135deg, #4facfe, #00f2fe);
    }

    .action-title {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .action-description {
        font-size: 0.85rem;
        color: #6c757d;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 15px;
        }
        
        .dashboard-header {
            padding: 20px;
        }
        
        .dashboard-title {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .charts-grid {
            grid-template-columns: 1fr;
        }
        
        .quick-actions {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">Admin Dashboard</h1>
        <p class="dashboard-subtitle">Welcome, @(userName ?? "Administrator"). Use the navbar to access Masters, Groups, and Users. All other modules have been removed.</p>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card masters">
            <div class="stat-icon masters">
                <i class="fa fa-database"></i>
            </div>
            <div class="stat-title">Masters</div>
            <div class="stat-description">Configure master data</div>
            <div class="stat-value">15</div>
        </div>

        <div class="stat-card groups">
            <div class="stat-icon groups">
                <i class="fa fa-users"></i>
            </div>
            <div class="stat-title">Groups</div>
            <div class="stat-description">Manage user groups</div>
            <div class="stat-value">8</div>
        </div>

        <div class="stat-card users">
            <div class="stat-icon users">
                <i class="fa fa-user"></i>
            </div>
            <div class="stat-title">Users</div>
            <div class="stat-description">Manage users and roles</div>
            <div class="stat-value">42</div>
        </div>

        <div class="stat-card transactions">
            <div class="stat-icon transactions">
                <i class="fa fa-exchange-alt"></i>
            </div>
            <div class="stat-title">Transactions</div>
            <div class="stat-description">Process business transactions</div>
            <div class="stat-value">156</div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-grid">
        <div class="chart-container">
            <h3 class="chart-title">
                <i class="fa fa-chart-line" style="color: #667eea;"></i>
                System Usage Overview
            </h3>
            <canvas id="usageChart" width="400" height="200"></canvas>
        </div>

        <div class="chart-container">
            <h3 class="chart-title">
                <i class="fa fa-chart-pie" style="color: #f093fb;"></i>
                Module Distribution
            </h3>
            <canvas id="moduleChart" width="400" height="200"></canvas>
        </div>
    </div>

    <div class="chart-container">
        <h3 class="chart-title">
            <i class="fa fa-chart-bar" style="color: #43e97b;"></i>
            Monthly Transaction Volume
        </h3>
        <canvas id="transactionChart" width="800" height="300"></canvas>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a href="@Url.Action("Index", "StateMaster")" class="action-card">
            <div class="action-icon masters">
                <i class="fa fa-database"></i>
            </div>
            <div class="action-title">Masters</div>
            <div class="action-description">Configure master data</div>
        </a>

        <a href="@Url.Action("Index", "Groups")" class="action-card">
            <div class="action-icon groups">
                <i class="fa fa-users"></i>
            </div>
            <div class="action-title">Groups</div>
            <div class="action-description">Manage user groups</div>
        </a>

        <a href="@Url.Action("Index", "Account")" class="action-card">
            <div class="action-icon users">
                <i class="fa fa-user"></i>
            </div>
            <div class="action-title">Users</div>
            <div class="action-description">Manage users and roles</div>
        </a>
    </div>
</div>

<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Usage Chart
    const usageCtx = document.getElementById('usageChart').getContext('2d');
    new Chart(usageCtx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Active Users',
                data: [12, 19, 15, 25, 22, 30],
                borderColor: '#667eea',
                backgroundColor: 'rgba(102, 126, 234, 0.1)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0,0,0,0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });

    // Module Chart
    const moduleCtx = document.getElementById('moduleChart').getContext('2d');
    new Chart(moduleCtx, {
        type: 'doughnut',
        data: {
            labels: ['Masters', 'Groups', 'Users', 'Transactions'],
            datasets: [{
                data: [35, 25, 20, 20],
                backgroundColor: [
                    '#667eea',
                    '#43e97b',
                    '#fa709a',
                    '#feca57'
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 20,
                        usePointStyle: true
                    }
                }
            }
        }
    });

    // Transaction Chart
    const transactionCtx = document.getElementById('transactionChart').getContext('2d');
    new Chart(transactionCtx, {
        type: 'bar',
        data: {
            labels: ['Raw Material Intake', 'Sampling & QC', 'Slab Segregation', 'Rate Calculation', 'Rate Confirmation', 'Invoice Generation'],
            datasets: [{
                label: 'Transactions',
                data: [45, 38, 42, 35, 28, 32],
                backgroundColor: [
                    '#667eea',
                    '#43e97b',
                    '#fa709a',
                    '#feca57',
                    '#ff6b6b',
                    '#4ecdc4'
                ],
                borderRadius: 8,
                borderSkipped: false
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0,0,0,0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>
