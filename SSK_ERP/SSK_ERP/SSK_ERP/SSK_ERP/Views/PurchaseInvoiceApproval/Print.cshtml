@model KVM_ERP.Controllers.InvoicePrintViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice Approval - @Model.TRANDNO</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            background: #f5f5f5;
        }

        .invoice-container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            padding: 40px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .invoice-header {
            text-align: center;
            border-bottom: 3px solid #185a9d;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .invoice-header h1 {
            color: #185a9d;
            font-size: 32px;
            margin-bottom: 5px;
        }

        .invoice-header h2 {
            color: #666;
            font-size: 18px;
            font-weight: normal;
        }

        .invoice-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .info-section {
            flex: 1;
        }

        .info-section h3 {
            color: #185a9d;
            font-size: 16px;
            margin-bottom: 10px;
            border-bottom: 2px solid #43cea2;
            padding-bottom: 5px;
        }

        .info-row {
            margin: 8px 0;
            display: flex;
        }

        .info-label {
            font-weight: 600;
            color: #555;
            min-width: 120px;
        }

        .info-value {
            color: #333;
        }

        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin: 30px 0;
        }

        .items-table thead {
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: white;
        }

        .items-table th {
            padding: 12px;
            text-align: left;
            font-weight: 600;
            font-size: 14px;
        }

        .items-table th.text-right,
        .items-table td.text-right {
            text-align: right;
        }

        .items-table th.text-center,
        .items-table td.text-center {
            text-align: center;
        }

        .items-table tbody tr {
            border-bottom: 1px solid #ddd;
        }

        .items-table tbody tr:hover {
            background: #f8f9fa;
        }

        .items-table td {
            padding: 12px;
            color: #333;
        }

        .tax-summary {
            width: 100%;
            max-width: 400px;
            margin-left: auto;
            margin-top: 20px;
            border: 2px solid #185a9d;
            border-radius: 8px;
            overflow: hidden;
        }

        .tax-summary-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 15px;
            border-bottom: 1px solid #ddd;
        }

        .tax-summary-row:last-child {
            border-bottom: none;
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: white;
            font-weight: 700;
            font-size: 18px;
        }

        .tax-label {
            font-weight: 600;
            color: #555;
        }

        .tax-summary-row:last-child .tax-label {
            color: white;
        }

        .tax-value {
            font-weight: 600;
            color: #185a9d;
        }

        .tax-summary-row:last-child .tax-value {
            color: white;
        }

        .invoice-footer {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 2px solid #ddd;
            text-align: center;
            color: #666;
            font-size: 14px;
        }

        .status-badge {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 600;
            margin-top: 10px;
        }

        .status-approved {
            background: #28a745;
            color: white;
        }

        .status-waiting {
            background: #ffc107;
            color: #333;
        }

        .status-cancelled {
            background: #dc3545;
            color: white;
        }

        @@media print {
            body {
                background: white;
                padding: 0;
            }

            .invoice-container {
                box-shadow: none;
                padding: 20px;
            }

            @@page {
                margin: 1cm;
            }
        }

        .print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #185a9d, #43cea2);
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(24, 90, 157, 0.3);
            transition: all 0.3s ease;
        }

        .print-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(24, 90, 157, 0.4);
        }

        @@media print {
            .print-button {
                display: none;
            }
        }
    </style>
</head>
<body>
    <button class="print-button" onclick="window.print();">
        <i class="fa fa-print"></i> Print Invoice
    </button>

    <div class="invoice-container">
        <div class="invoice-header">
            <h1>PURCHASE INVOICE</h1>
            <h2>Invoice Approval</h2>
            @if (!string.IsNullOrEmpty(Model.StatusDescription))
            {
                var statusClass = Model.StatusDescription == "Approved" ? "status-approved" :
                                 Model.StatusDescription == "Waiting for Approval" ? "status-waiting" :
                                 Model.StatusDescription == "Cancel" ? "status-cancelled" : "";
                <div class="status-badge @statusClass">@Model.StatusDescription</div>
            }
        </div>

        <div class="invoice-info">
            <div class="info-section">
                <h3>Invoice Details</h3>
                <div class="info-row">
                    <span class="info-label">Invoice No:</span>
                    <span class="info-value">@Model.TRANDNO</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Invoice Date:</span>
                    <span class="info-value">@Model.TRANDATE.ToString("dd MMM yyyy")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Reference No:</span>
                    <span class="info-value">@Model.TRANREFNO</span>
                </div>
            </div>

            <div class="info-section">
                <h3>Supplier Information</h3>
                <div class="info-row">
                    <span class="info-label">Supplier Name:</span>
                    <span class="info-value">@Model.CATENAME</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Supplier Code:</span>
                    <span class="info-value">@Model.CATECODE</span>
                </div>
            </div>
        </div>

        <table class="items-table">
            <thead>
                <tr>
                    <th style="width: 5%;">S.No</th>
                    <th style="width: 25%;">Item</th>
                    <th style="width: 15%;">Grade</th>
                    <th style="width: 15%;">Production Colour</th>
                    <th style="width: 12%;">Received Type</th>
                    <th class="text-right" style="width: 10%;">Quantity</th>
                    <th class="text-right" style="width: 10%;">Rate (₹)</th>
                    <th class="text-right" style="width: 13%;">Amount (₹)</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int serialNo = 1;
                    decimal subtotal = 0;
                }
                @foreach (var item in Model.Items)
                {
                    subtotal += item.TRANDAMT;
                    <tr>
                        <td class="text-center">@serialNo</td>
                        <td>@item.MTRLNAME</td>
                        <td>@(string.IsNullOrEmpty(item.GRADEDESC) ? "-" : item.GRADEDESC)</td>
                        <td>@(string.IsNullOrEmpty(item.PCLRDESC) ? "-" : item.PCLRDESC)</td>
                        <td>@(string.IsNullOrEmpty(item.RCVDTDESC) ? "-" : item.RCVDTDESC)</td>
                        <td class="text-right">@item.TRANQTY.ToString("N2")</td>
                        <td class="text-right">@item.TRANRATE.ToString("N2")</td>
                        <td class="text-right">@item.TRANDAMT.ToString("N2")</td>
                    </tr>
                    serialNo++;
                }
            </tbody>
        </table>

        <div class="tax-summary">
            <div class="tax-summary-row">
                <span class="tax-label">Subtotal:</span>
                <span class="tax-value">₹ @subtotal.ToString("N2")</span>
            </div>

            @* Display CGST from TRANSACTIONMASTER *@
            @if (Model.CGSTAMT > 0)
            {
                <div class="tax-summary-row">
                    <span class="tax-label">
                        CGST: &#64; @Model.CGSTPER%
                    </span>
                    <span class="tax-value">₹ @Model.CGSTAMT.ToString("N2")</span>
                </div>
            }

            @* Display SGST from TRANSACTIONMASTER *@
            @if (Model.SGSTAMT > 0)
            {
                <div class="tax-summary-row">
                    <span class="tax-label">
                        SGST: &#64; @Model.SGSTPER%
                    </span>
                    <span class="tax-value">₹ @Model.SGSTAMT.ToString("N2")</span>
                </div>
            }

            @* Display IGST from TRANSACTIONMASTER *@
            @if (Model.IGSTAMT > 0)
            {
                <div class="tax-summary-row">
                    <span class="tax-label">
                        IGST: &#64; @Model.IGSTPER%
                    </span>
                    <span class="tax-value">₹ @Model.IGSTAMT.ToString("N2")</span>
                </div>
            }

            @* Display other factors from TRANSACTIONMASTERFACTOR (like Discount) *@
            @if (Model.TaxFactors != null && Model.TaxFactors.Any())
            {
                foreach (var tax in Model.TaxFactors)
                {
                    <div class="tax-summary-row">
                        <span class="tax-label">
                            @tax.CFDESC:
                            @if (tax.OPTNVALUE == 1 && tax.CFRATE != 0)
                            {
                                <text> &#64; @Math.Abs(tax.CFRATE)%</text>
                            }
                        </span>
                        <span class="tax-value">₹ @tax.CFAMT.ToString("N2")</span>
                    </div>
                }
            }

            <div class="tax-summary-row">
                <span class="tax-label">Total Amount:</span>
                <span class="tax-value">₹ @Model.TRANNAMT.ToString("N2")</span>
            </div>
        </div>

        <div class="invoice-footer">
            <p><strong>Thank you for your business!</strong></p>
            <p>This is a computer-generated invoice and does not require a signature.</p>
            <p style="margin-top: 10px; font-size: 12px;">Printed on: @DateTime.Now.ToString("dd MMM yyyy hh:mm tt")</p>
        </div>
    </div>

    <!-- Add Font Awesome for print icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</body>
</html>
