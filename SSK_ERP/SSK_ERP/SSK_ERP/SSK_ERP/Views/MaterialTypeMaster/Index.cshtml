@{
    ViewBag.Title = "Material Type Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .main-container {
        background: white;
        min-height: 100vh;
        padding: 20px 0;
    }
    
    .content-wrapper {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 20px;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }
    
    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px 30px;
        border-radius: 15px 15px 0 0;
    }
    
    .header-title {
        font-size: 28px;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .add-btn {
        background: linear-gradient(135deg, #ff6b6b, #ee5a24);
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(238, 90, 36, 0.4);
    }
    
    .add-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(238, 90, 36, 0.6);
        color: white;
    }
    
    .table-container {
        padding: 30px;
        background: white;
    }
    
    .dataTables_wrapper {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    #materialTypeTable {
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    #materialTypeTable thead th {
        background: #7f88e9; /* slight violet-blue */
        color: white;
        font-weight: 600;
        padding: 15px 12px;
        text-align: center;
        border: none;
        font-size: 14px;
        border-right: 1px solid rgba(255,255,255,0.35); /* divide columns */
    }
    #materialTypeTable thead th:last-child { border-right: none; }
    
    #materialTypeTable tbody td {
        padding: 12px;
        border-bottom: 1px solid #f0f0f0;
        vertical-align: middle;
        text-align: center;
    }
    
    #materialTypeTable tbody tr:hover {
        background-color: #f8f9ff;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    
    .btn-action {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 20px;
        border: none;
        font-size: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-edit {
        background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
        color: #2d3436;
    }
    
    .btn-edit:hover {
        background: linear-gradient(135deg, #fdcb6e, #e17055);
        color: white;
        transform: translateY(-1px);
    }
    
    .btn-delete {
        background: linear-gradient(135deg, #fd79a8, #e84393);
        color: white;
    }
    
    .btn-delete:hover {
        background: linear-gradient(135deg, #e84393, #d63031);
        transform: translateY(-1px);
    }
    
    .badge {
        color: black !important;
        font-weight: 600;
    }
    
    .badge-success {
        background-color: #d4edda;
        color: black !important;
        border: 1px solid #c3e6cb;
    }
    
    .badge-danger {
        background-color: #f8d7da;
        color: black !important;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="main-container">
    <div class="content-wrapper">
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="header-title">
                    <i class="fa fa-cubes"></i>
                    Material Type Master
                </h1>
                <a href="@Url.Action("Form", "MaterialTypeMaster")" class="btn add-btn">
                    <i class="fa fa-plus-circle"></i> Add New Material Type
                </a>
            </div>
        </div>

        <div class="table-container">
            <div id="tableNotification" class="alert alert-info" style="display: none;">
                <i class="fa fa-info-circle"></i> 
                <strong>Note:</strong> If you're seeing this for the first time, you may need to create the MATERIALTYPEMASTER table in your database. 
                Please run the SQL script located at: <code>Query/CreateMaterialTypeMasterTable.sql</code>
            </div>
            <table id="materialTypeTable" class="display table table-striped" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Display Order</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Display Order</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            // Make DataTables report errors to console instead of silently failing
            $.fn.dataTable.ext.errMode = 'console';

            var table = $('#materialTypeTable').DataTable({
                ajax: {
                    url: "@Url.Action("GetAjaxData", "MaterialTypeMaster")",
                    type: "GET",
                    dataSrc: function (json) {
                        console.log('Received data:', json); // Debug log
                        
                        // Handle different data formats
                        if (json && Array.isArray(json.data)) {
                            $('#tableNotification').hide(); // Hide notification if data loads successfully
                            return json.data;
                        }
                        if (Array.isArray(json)) {
                            $('#tableNotification').hide();
                            return json;
                        }
                        if (json && json.error) {
                            console.error('Server error:', json.error);
                            $('#tableNotification').show();
                            return [];
                        }
                        console.warn('Unexpected data format from MaterialTypeMaster:', json);
                        return [];
                    },
                    error: function (xhr, status, err) {
                        console.error('MaterialTypeMaster GetAjaxData error:', status, err);
                        console.error('Response Text:', xhr.responseText);
                        console.error('Status Code:', xhr.status);
                        
                        // Show notification with error details
                        $('#tableNotification').html(
                            '<i class="fa fa-exclamation-triangle"></i> ' +
                            '<strong>Error loading data:</strong> ' + status + ' - ' + err + 
                            '<br><small>Check browser console for details.</small>'
                        ).removeClass('alert-info').addClass('alert-warning').show();
                    }
                },
                columns: [
                    { data: "MTRLTCODE" },
                    { data: "MTRLTDESC" },
                    { 
                        data: "DISPORDER",
                        render: function (data, type, row) {
                            return '<span class="badge badge-info">' + data + '</span>';
                        }
                    },
                    { 
                        data: "DISPSTATUS",
                        render: function (data, type, row) {
                            return data == 0 ? '<span class="badge badge-success">Enabled</span>' : '<span class="badge badge-danger">Disabled</span>';
                        }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<a href="@Url.Action("Form", "MaterialTypeMaster")/' + row["MTRLTID"] + '" class="btn btn-action btn-edit"><i class="fa fa-edit"></i> Edit</a>' +
                                   '&nbsp;<a href="#" class="btn btn-action btn-delete editor_remove" data-id="' + row["MTRLTID"] + '"><i class="fa fa-trash"></i> Delete</a>';
                        }
                    }
                ],
                dom: '<"row mb-3"<"col-md-6"l><"col-md-6"f>>rt<"row mt-3"<"col-md-6"i><"col-md-6"p>>',
                responsive: true,
                pageLength: 25,
                order: [[2, 'asc'], [0, 'asc']], // Order by Display Order first, then by Code
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search..."
                }
            });

            //--------------Delete Record----------------//
            $(document).on("click", "a.editor_remove", function (e) {
                e.preventDefault();
                var id = $(this).data('id');
                
                if (confirm("Are you sure you want to delete this material type?")) {
                    $.post('@Url.Action("Del", "MaterialTypeMaster")', { id: id })
                        .done(function(response) {
                            if (response.indexOf('Successfully') !== -1) {
                                table.ajax.reload();
                                alert('Material Type deleted successfully!');
                            } else {
                                alert('Error: ' + response);
                            }
                        })
                        .fail(function() {
                            alert('Error occurred while deleting the record.');
                        });
                }
                return false;
            });//end
        });
    </script>
}
